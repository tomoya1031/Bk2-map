<div class="container">
    <% if flash[:notice] %>
	    <div class="flash">
	        <%= flash[:notice] %>
	    </div>
    <% end %>
    <% if @book.errors.any? %>
        <div class="error">
    	    <h4 class="error-title"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
    	    <ul class="error-box">
    		    <% @book.errors.full_messages.each do |message| %>
    			    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

<%= render 'books/sidebar', book: @book %>

			<h2>Books</h2>
		    <table class="table table-hover">
			    <thead>
				    <tr>
					    <th></th>
					    <th>Title</th>
					    <th>Opinion</th>
				    </tr>
			    </thead>
			    <% @books.each do |book| %>
			        <tbody>
				        <tr>
						    <td>
						        <%= link_to user_path(book.user.id) do %>
						            <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%>
						        <% end %>
					        </td>
					        <td>
						        <%= link_to book.title ,book_path(book.id),class: "list-aitem" %>
					        </td>
					        <td><%= book.body %></td>
				        </tr>
			        </tbody>
			    <% end %>
			</table>
		</div>
	</div>
</div>