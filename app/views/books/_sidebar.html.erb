<div class="row">
	<div class="col-xs-3">
		<div>
			<h2>User info</h2>
		</div>
		<div class="img-box">
			<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
		</div>
		<table class="table">
			<tbody>
				<tr>
					<td>
						<strong>name</strong>
					</td>
					<td>
						<strong><%= current_user.name %></strong>
					</td>
				</tr>
				<tr>
					<td >
						<strong>introduction</strong>
					</td>
					<td>
						<strong><%= current_user.introduction %></strong>
					</td>
				</tr>
			</tbody>
		</table>
		<div classa="btn btn-info">
		<%= link_to edit_user_path(current_user.id) ,data: {"turbolinks" => false}, class: "btn btn-default w-100" do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
		</div>
		<div class="new-title">
			<h2>New book</h2>
		</div>
		<%= form_with model: (book), local: true do |f| %>
		    <div class="field">
		    	<div>
		    		<%= f.label :title, "Title" %>
		    	</div>
			   	<div>
			   		<%= f.text_field :title ,class: "w-100"%>
			   	</div>
		   </div>
		    <div class="field">
		    	<div>
			   		<%= f.label :title, "Opinion" %>
			   	</div>
			   	<div>
			   		<%= f.text_area :body ,class: "w-100"%>
		    	</div>
		    </div>
		    <%= f.submit 'Create Book', class: "btn btn-primary w-100 border" %>
		<% end %>
	</div>
    <div class="col-xs-9">